<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C360A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fitur Android"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Icon Card 1"
                    android:src="@drawable/motif_parang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batik Parang"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#6B5B95"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batik parang adalah motif batik tertua di Indonesia yang memiliki filosofi kuat tentang semangat juang, keuletan, dan kegigihan dalam menghadapi hidup, diibaratkan seperti gelombang laut yang tak pernah berhenti."
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/baca_btn_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Baca"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3C360A"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/pelajari_btn_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pelajari"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3C360A"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="285dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Icon Card 2"
                    android:src="@drawable/motif_megamendung" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="Batik Mega Mendung"
                    android:textColor="#6B5B95"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="Batik Mega Mendung adalah motif batik khas dari Cirebon, Jawa Barat, yang terkenal dengan pola awan berlapis-lapis yang menyerupai langit mendung. Motif ini melambangkan kedamaian, ketenangan, dan harapan akan turunnya hujan sebagai pembawa kesuburan."
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/baca_btn_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#3C360A"
                        android:text="Baca"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pelajari_btn_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#3C360A"
                        android:text="Pelajari"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Icon Card 3"
                    android:src="@drawable/motif_kawung" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batik Kawung"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#6B5B95"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batik Kawung adalah motif batik Jawa klasik berbentuk bulatan-bulatan geometris, menyerupai buah kawung (aren/kolang-kaling) atau bunga teratai, yang melambangkan kesempurnaan, kemurnian, dan pengendalian diri."
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/baca_btn_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Baca"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3C360A"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/pelajari_btn_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pelajari"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3C360A"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>